{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "sourceMap": true,
    "module": "ES2015",
    "jsx": "react"
  },
  "include": [
    "src",
    "test",
    "stories",
    "index.d.ts",
    "development",
    "webpack.config.js"
  ]
}
